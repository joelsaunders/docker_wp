{
	"apiVersion": "extensions/v1beta1",
	"kind": "Deployment",
	"metadata": {
		"name": "postgres"
	},
	"spec": {
		"replicas": 1,
		"template": {
			"metadata": {
				"labels": {
					"name": "main"
				}
			},
			"spec": {
				"containers": [{
					"image": "postgres",
					"name": "postgres",
					"ports": [{
						"containerPort": 5432
					}],
                    "volumeMounts": [{
                        "name": "postgresdata",
                        "mountPath": "/usr/local/var/postgres"
                    }]
				}],
                "volumes": [{
                    "name": "postgresdata",
                    "gcePersistentDisk": {
                        "pdName": "pg-data",
                        "fsType": "ext4"
                    }
                }]
			}
		}
	}
}